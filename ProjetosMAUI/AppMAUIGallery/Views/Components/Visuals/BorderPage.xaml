<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMAUIGallery.Views.Components.Visuals.BorderPage"
             Title="BorderPage">
    <VerticalStackLayout Padding="10">
        <Border Padding="10"
                Stroke="Blue"
                StrokeThickness="10"
                
                StrokeLineJoin="Round"
                StrokeLineCap="Round"
                
                StrokeDashArray="1,1,3,1,5,2"
                StrokeDashOffset="4"
                >
            <Label 
                Text="Welcome to .NET MAUI!"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
        </Border>

        <Border Padding="10"
                Stroke="Blue"
                StrokeShape="RoundRectangle 5, 10, 15, 20">
            
            <Label Text="Oi como vai?" />
        </Border>
    </VerticalStackLayout>
</ContentPage>